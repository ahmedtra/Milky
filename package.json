{
  "name": "milky-diet-assistant",
  "version": "1.0.0",
  "description": "AI-powered diet assistant with Gemini AI and Telegram notifications",
  "main": "server/index.js",
  "scripts": {
    "dev": "concurrently \"npm run server\" \"npm run client\"",
    "server": "nodemon server/index.js",
